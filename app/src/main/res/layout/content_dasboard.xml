<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ecommerce.bitirme.ecommerce.Activity.DasboardActivity"
    tools:showIn="@layout/app_bar_dasboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
    android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
    android:background="@color/unselected_color"
            android:gravity="center"
            android:text="Vitrindeki Ev İlanları"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="italic|bold" />

        <ListView
            android:id="@+id/dashboardev_listview"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_weight="0.1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/unselected_color"
        android:gravity="center"
        android:text="Vitrindeki Araba İlanları"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="italic|bold" />

        <ListView
            android:id="@+id/dashboardaraba_listview"
        android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_weight="0.1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/unselected_color"
            android:gravity="center"
            android:text="Vitrindeki Telefon İlanları"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="italic|bold" />

        <ListView
            android:id="@+id/dashboardtelefon_listview"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_weight="0.1" />


    </LinearLayout>
</ScrollView>
