<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ecommerce.bitirme.ecommerce.Activity.AddAdvert">
    <TextView
        android:id="@+id/ilanadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/advert_type_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İlan Tipi"/>
    <Spinner
        android:id="@+id/advert_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fiyat Aralığı"/>
    <EditText
        android:id="@+id/min_price_edttxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="min"/>

        <EditText
            android:id="@+id/max_price_edttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="max" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sizes_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m2"/>
        <EditText
            android:id="@+id/sizes_min_edttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="min"/>
        <EditText
            android:id="@+id/sizes_max_edttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="max"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/numberOf_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oda Sayısı"/>
        <Spinner
            android:id="@+id/numberOf_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/city_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Şehir" />

        <Spinner
            android:id="@+id/city_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/district_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semt" />

        <Spinner
            android:id="@+id/district_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/credits_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Krediye Uygun"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evet"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hayır"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/explanation_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Açıklama"/>
        <EditText
            android:id="@+id/explanation_edttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="İlan Açıklaması"/>
    </LinearLayout>
    <Button
        android:id="@+id/save_advert_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İlan Kaydet"/>
</LinearLayout>
